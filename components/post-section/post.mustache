<section class="post-container">
    <div class="post-btn-container">
        <button type="button" class="btn btn-primary post-btn" data-bs-toggle="modal" data-bs-target="#post-form-modal">
            Add Post
        </button>
    </div>

    <!-- Modal -->
    <div class="modal fade" id="post-form-modal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="exampleModalLabel">Post Form</h1>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    <!-- form body -->
                    <form class="post-form" id="post-form">
                        <div class="mb-3">
                            <label for="img-url" class="form-label">Image URL</label>
                            <input type="url" class="form-control" name="img-url" id="img-url" placeholder="url" required>
                        </div>
                        <div class="mb-3">
                            <label for="title" class="form-label">Title</label>
                            <input type="text" class="form-control" name="title" id="title" placeholder="title" required>
                        </div>
                        <div class="mb-3">
                            <label for="description" class="form-label">Description</label>
                            <textarea class="form-control" id="description" name="description" rows="3" required></textarea>
                        </div>

                        <button type="submit" class="btn btn-primary" id="submit-post-form">Submit</button>
                    </form>
                </div>
                <div class="modal-footer">
                </div>
            </div>
        </div>
    </div>

    <ul class="post-list">
        {{#posts}}
        <li class='post-list-item'>
            <div class="post-card-container">
                <div class="post-line"></div>
                <div class="avatar-and-line">
                    <div>
                        <img src="../../assets/avatar-1.png" alt="avatar-1" class="avatar">
                    </div>
                    <div class="avatar-line"></div>
                </div>

                <div class="post-card">
                    <div class="post-heading">
                        <div class='user-details'>
                            <p class="name">Josephin Doe posted on your timeline</p>
                            <p class="time">{{durationOfPost}}</p>
                        </div>
                        <div>
                            <i class="fa-sharp fa-solid fa-ellipsis-vertical menu-icon"></i>
                        </div>
                    </div>
                    <div class="card-image">
                        <img src="{{url}}" alt="image">
                    </div>
                    <div class="card-footer">
                        <div class="title-description">
                            <p class="title">{{title}}</p>
                            <p class="description">{{description}}</p>
                        </div>
                        <hr>
                        <div class="footer-buttons">
                            <div class="like">
                                <div class='button-icon'><i class="fa-solid fa-heart"></i></div>
                                <p>Like (20)</p>
                            </div>
                            <div class="button-separator"></div>
                            <div class="comments">
                                <div class='button-icon'><i class="fa-solid fa-message"></i></div>
                                <p>Comments (25)</p>
                            </div>
                            <div class="button-separator"></div>
                            <div class="share">
                                <div class='button-icon'><i class="fa-solid fa-share-nodes"></i></div>
                                <p>Share (10)</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </li>
        {{/posts}}
    </ul>
</section>