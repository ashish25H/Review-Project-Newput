<div class="card p-3 card-container" >
    <img src="../../assets/profile.jpg" class="card-img-top" alt="profile">
    <div class="card-body card-text">
        <h5 class="card-title">{{name}}</h5>
        <p>{{occupation}}</p>
        <div class="followers-info">
            <div>
                <p id='friend-count' class='number'>485</p>
                <p>Followings</p>
            </div>
            <div>
                <p class='number'>2k</p>
                <p>Followers</p>
            </div>
            <div>
                <p class='number'>90</p>
                <p>Activities</p>
            </div>
        </div>
        <button class="card-btn"><i class="fa-solid fa-user profile-icon"></i>ADD AS FRIEND</button>
    </div>
</div>